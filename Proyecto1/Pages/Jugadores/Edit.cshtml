@page
@model Proyecto1.Pages.Jugadores.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Editar</h2>

<h4>Jugador</h4>
<hr />
<div class="row">
    <div class=" col-lg-4">
        <h3>Datos actuales del jugador</h3>
        <p>Nombre actual :@Model.juga.Nombre</p>
        <p>Historia actual :@Model.juga.Historia</p>
        <p>Juega con la casaca Nº:@Model.juga.Posicion</p>        
        <p></p>
        <img class=" img-thumbnail" alt="bandera" width="120" height="80" src="~/images/Jugadores/@Model.juga.ImagenJug">
        <p>@Model.juga.ImagenJug</p>
    </div>
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Jugador.JugadorID" />
            <div class="form-group">

                <label asp-for="Jugador.Nombre" class="control-label"></label>                
                <input asp-for="Jugnom" class="form-control" />
                <span asp-validation-for="Jugnom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Jugador.Historia" class="control-label"></label>
                <input asp-for="Histor" class="form-control" />
                <span asp-validation-for="Histor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Jugador.Posicion" class="control-label"></label>
                <input asp-for="Jugpos" class="form-control" />
                <span asp-validation-for="Jugpos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Jugador.ImagenJug" class="control-label"></label>
                <input asp-for="Jugima" type="file"
                       accept=".jpg, .jpeg, .png, .svg">
                <span asp-validation-for="Jugima" class="text-danger"></span>                              
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/Equipos/Index">Volver a Equipos</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
